# ===========================================
# AI Configuration
# اختر مزود الذكاء الاصطناعي (anthropic أو openai)
# ===========================================
AI_PROVIDER=anthropic
ANTHROPIC_API_KEY=sk-ant-xxxxx
# أو استخدم OpenAI
OPENAI_API_KEY=sk-xxxxx
OPENAI_MODEL=gpt-4-turbo-preview

# ===========================================
# Twitter API Configuration
# احصل على المفاتيح من: https://developer.twitter.com/
# ===========================================
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_SECRET=your_access_secret_here

# ===========================================
# Reddit API Configuration
# احصل على المفاتيح من: https://www.reddit.com/prefs/apps
# ===========================================
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password
REDDIT_USER_AGENT=AI-Auto-Post-Agent/1.0

# Subreddits للنشر (افصلها بفاصلة)
REDDIT_SUBREDDITS=programming,learnprogramming,webdev

# ===========================================
# Blogger API Configuration
# احصل على المفاتيح من: https://console.cloud.google.com/
# ===========================================
BLOGGER_BLOG_ID=your_blog_id
GOOGLE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"

# ===========================================
# Application Settings
# إعدادات التطبيق
# ===========================================
NODE_ENV=production

# عدد المنشورات في كل تشغيل
POSTS_PER_RUN=3

# أوقات الجدولة (استخدم صيغة cron أو أوقات محددة بفاصلة)
SCHEDULE_TIMES=09:00,15:00,21:00

# تفعيل/تعطيل المنصات
ENABLE_TWITTER=true
ENABLE_REDDIT=true
ENABLE_BLOGGER=true

# مستوى السجلات (error, warn, info, debug)
LOG_LEVEL=info

# ===========================================
# Advanced Settings
# إعدادات متقدمة
# ===========================================

# الحد الأقصى لإعادة المحاولة عند الفشل
MAX_RETRIES=3

# التأخير بين المنشورات (بالثواني)
DELAY_BETWEEN_POSTS=60

# تفعيل الوضع التجريبي (لا ينشر فعلياً)
DRY_RUN=false
